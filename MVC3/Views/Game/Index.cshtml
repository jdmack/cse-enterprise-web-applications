@model IEnumerable<MVC3.Models.PLGame>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            player1Name
        </th>
        <th>
            player1Race
        </th>
        <th>
            player2Name
        </th>
        <th>
            player2Race
        </th>
        <th>
